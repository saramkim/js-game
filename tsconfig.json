{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "rootDir": "./src",
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
